{
  "name": "somnia-content-monetization",
  "version": "1.0.0",
  "description": "Universal micropayment platform for digital content creators",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"pnpm run dev:contracts\" \"pnpm run dev:frontend\"",
    "dev:contracts": "hardhat node",
    "dev:frontend": "cd frontend && pnpm run dev",
    "compile": "hardhat compile",
    "test": "pnpm run test:contracts && pnpm run test:frontend",
    "test:contracts": "hardhat test",
    "test:frontend": "cd frontend && pnpm test",
    "test:coverage": "hardhat coverage",
    "test:gas": "REPORT_GAS=true hardhat test",
    "test:local": "hardhat test --network localhost",
    "test:anvil": "hardhat test --network anvil",
    "test:setup": "hardhat run scripts/test-setup.js --network localhost",
    "test:deploy": "hardhat run scripts/deploy.js --network localhost",
    "test:verify": "hardhat run scripts/verify.js --network localhost",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart",
    "deploy:testnet": "hardhat run scripts/deploy.js --network somnia-testnet",
    "deploy:sepolia": "hardhat run scripts/deploy.js --network sepolia",
    "test:manual": "hardhat run scripts/test-manual.js --network somnia-testnet",
    "deploy:mainnet": "hardhat run scripts/deploy.js --network somnia-mainnet",
    "verify:testnet": "hardhat run scripts/verify.js --network somnia-testnet",
    "verify:mainnet": "hardhat run scripts/verify.js --network somnia-mainnet",
    "clean": "node scripts/clean.js",
    "clean:all": "node scripts/clean.js --all",
    "clean:docker": "node scripts/clean.js --docker",
    "lint": "pnpm run lint:contracts && pnpm run lint:frontend",
    "lint:contracts": "solhint 'contracts/**/*.sol'",
    "lint:frontend": "cd frontend && pnpm run lint",
    "format": "prettier --write .",
    "type-check": "cd frontend && pnpm run type-check",
    "manage:versions": "hardhat run scripts/manage-versions.js --network somnia-testnet",
    "list:versions": "hardhat run scripts/list-versions.js",
    "verify:contracts": "hardhat verify --network somnia-testnet"
  },
  "keywords": [
    "blockchain",
    "defi",
    "micropayments",
    "somnia",
    "content-creators",
    "streaming"
  ],
  "author": "Somnia Content Monetization Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@openzeppelin/contracts": "^5.4.0",
    "concurrently": "^8.0.0",
    "hardhat": "^2.19.0",
    "prettier": "^3.0.0",
    "solhint": "^4.0.0"
  },
  "dependencies": {
    "dotenv": "^17.2.1",
    "ethers": "^6.8.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
